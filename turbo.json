{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["pnpm-lock.yaml"],
  "pipeline": {
    "build": {
      "inputs": [
        "pages/**",
        "components/**",
        "public/**",
        "nuxt.config.ts",
        "i18n.config.ts",
        "app.vue"
      ],
      "outputs": [".nuxt/**", ".output/**", "dist/**"]
    },
    "lint": {
      "inputs": [
        ".editorconfig",
        ".prettierrc",
        ".prettierignore",
        "pages/**",
        "components/**",
        "public/**",
        "nuxt.config.ts",
        "i18n.config.ts",
        "app.vue"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
